<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h1><%= lista.title %></h1>
            <form action="/lista/tarefas/<%= lista.id %>" method="post" class="mb-3">
                <div class="input-group">
                    <input type="text" id="title" name="title" class="form-control">
                    <button type="submit" class="btn btn-primary">Adicionar</button>
                </div>
            </form>
        <ul class="list-group">
            <% lista.tarefas.forEach(tarefa => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center <%= tarefa.status ? 'bg-success text-white' : '' %>">
                    <%= tarefa.title %>
                    
                    <% if(!tarefa.status){%>
                        <form action="/listas/<%= lista.id %>/tarefas/<%= tarefa.id %>/concluir" method="post">
                        <button type="submit"  class="btn btn-success btn-sm">Completar</button>
                        </form>
                    <% } else{ %>
                        <form action="/listas/<%= lista.id %>/tarefas/<%= tarefa.id %>/desfazer" method="post">
                        <button type="submit"  class="btn btn-success btn-sm">Desfazer</button>
                        </form>
                   <% } %>
                </li>
            <% }); %>
        </ul>
            
           <a href="/listas">Voltar para Listas</a>
    </div>
</body>
</html>